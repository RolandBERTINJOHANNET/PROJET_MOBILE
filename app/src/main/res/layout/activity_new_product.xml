<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewProductActivity"
    android:id="@+id/newProductLayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NewProductTextView"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="40sp"
        android:text="Ajouter un produit"
        />

    <ImageView
        android:id="@+id/product1Image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/editProductPrice"
        android:scaleType="centerCrop"
        />

    <EditText
        android:id="@+id/editProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/NewProductTextView"
        app:layout_constraintBottom_toTopOf="@id/editProductPrice"
        android:hint="Entrer le nom du produit"
        />

    <EditText
        android:id="@+id/editProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/editProductName"
        app:layout_constraintBottom_toTopOf="@id/product1Image"
        android:hint="Entrer le prix du produit"
        android:inputType="numberDecimal"
        />

    <Button
        android:id="@+id/product1addImage"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="+"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product1Image"
        app:layout_constraintBottom_toBottomOf="@+id/product1Image"
        />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/product1Image"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="catÃ©gorie : "
        app:layout_constraintTop_toTopOf="@id/checkedMiddle"
        app:layout_constraintBottom_toBottomOf="@id/checkedMiddle"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="35sp"
        android:gravity="center"
        />

    <CheckedTextView
        android:id="@+id/checkedMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:text="meubles"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/confirmTemplate1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product1Image" />

    <CheckedTextView
        android:id="@+id/checkedBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:text="gastronomie"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkedMiddle"
        tools:layout_editor_absoluteY="651dp" />
    <CheckedTextView
        android:id="@+id/checkedTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/checkedMiddle"
        android:text="art"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        />

    <Button
        android:id="@+id/confirmTemplate1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmer"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>