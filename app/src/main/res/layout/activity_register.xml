<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

  <TextView
      android:layout_marginTop="50dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="Inscription"
      android:textSize="40dp"/>

  <EditText
    android:layout_marginTop="170dp"
    android:id="@+id/name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Prémon et Nom"
    android:gravity="center"
    />

  <EditText
      android:layout_marginTop="50dp"
      android:id="@+id/email"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="adresse mail"
      android:layout_below="@+id/name"
      android:gravity="center"
      />

  <EditText
      android:id="@+id/password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/email"
      android:layout_marginTop="50dp"
      android:gravity="center"
      android:hint="mot de passe"
      android:inputType="textPassword"/>

  <TextView
      android:id="@+id/buyer_seller_text"
      android:layout_marginTop="50dp"
      android:paddingBottom="25dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Vous êtes :"
      android:textSize="20sp"
      android:layout_below="@+id/password"
      android:gravity="center"/>

  <CheckedTextView android:id="@+id/clientCheck"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Client"
      android:checked="false"
      android:textSize="20sp"
      android:checkMark="?android:attr/listChoiceIndicatorSingle"
      android:layout_below="@+id/buyer_seller_text"
      android:layout_marginLeft="50dp"
      />
  <CheckedTextView android:id="@+id/vendeurCheck"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Vendeur"
      android:checked="false"
      android:textSize="20sp"
      android:checkMark="?android:attr/listChoiceIndicatorSingle"
      android:layout_alignParentRight="true"
      android:layout_marginRight="50dp"
      android:layout_below="@id/buyer_seller_text"
      />


  <Button
      android:id="@+id/confirm"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/vendeurCheck"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="50dp"
      android:text="Confirmer" />

  </RelativeLayout>